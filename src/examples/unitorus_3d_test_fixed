// Test configuration for 3D Unidirectional Torus
// 4x3x2 torus with different properties per dimension

// Topology
topology = unitorus;
dim_sizes = {4,3,2};       // 4x3x2 torus

// Direction-specific configuration
dim_bandwidth = {3,2,1};   // Dim 0: 3x, Dim 1: 2x, Dim 2: 1x bandwidth
dim_latency = {1,2,3};     // Dim 0: 1 cycle, Dim 1: 2 cycles, Dim 2: 3 cycles
dim_penalty = {0,2,5};     // Dim 0: no penalty, Dim 1: 2 cycles, Dim 2: 5 cycles

// Routing
routing_function = dim_order_unitorus;

// Flow control
num_vcs = 8;
vc_buf_size = 16;
wait_for_tail_credit = 1;

// Router architecture
vc_allocator = islip;
sw_allocator = islip;
alloc_iters  = 1;

// Traffic
traffic = uniform;
injection_rate = 0.05;

// Simulation
sim_type = latency;
warmup_periods = 3;
sample_period = 1000;
max_samples = 10;
